@model EnvanterYonetimPaneli.Models.KomutModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Navbar {
    <div class="ms-auto">
        <div class="dropdown" style="color:#0D6EFD">
            <a class="btn btn-secondary dropdown-toggle" style="background-color:white; color: #0D6EFD;" href="#"
                role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Menü
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="@Url.Action("CommandList", "Commands" )">Komut Tablosu</a></li>
                <li><a class="dropdown-item logout-item" href="@Url.Action("Logout", "Login")">Çıkış Yap</a></li>
                <li><a class="dropdown-item d-flex align-items-center justify-content-between" style="cursor: default;">
                        <span>Koyu Mod</span>
                        <div class="form-check form-switch m-0">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                        </div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
}
<div class="d-flex justify-content-center align-items-center">
    <div class="command-container p-4" style="width: 350px;">
        <form method="post" asp-controller="Commands" asp-action="SendCommand">
            <h2 class="text-center">Komut Gönder</h2>
            <div class="mb-2 text-start">
                @if (!string.IsNullOrWhiteSpace(Model.CompName))
                {
                    <label class="mb-1 form-label" for="CompName">Bilgisayar Adı</label>
                    <input type="text" name="CompName" id="CompName" class="form-control" readonly
                    value="@Model.CompName">
                }
                else
                {
                    <label class="mb-1 form-label" for="CompName">Bilgisayar Adı</label>
                    <input type="text" name="CompName" id="CompName" class="form-control">
                }
            </div>
            <div class="mb-3 text-start">
                <label class="mb-1 form-label" for="Command">Komut</label>
                <input type="text" name="Command" id="Command" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary w-100">Gönder</button>
        </form>
    </div>
</div>
